<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".contactus">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/logodvs">
    </LinearLayout>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="10dp"
            android:padding="20dp"
            android:layout_marginTop="50dp">
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/firstname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="First Name"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dvsink"
                    android:inputType="text"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/lastname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Name"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dvsink"
                    android:inputType="text"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/signemailid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Email id"
                    android:ems="10"
                    android:textColorHint="@color/dvsink"
                    android:inputType="textEmailAddress"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/contactno"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:hint="Mobile Number"
                    android:ems="10"
                    android:textColorHint="@color/dvsink"
                    android:inputType="number"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:focusableInTouchMode="true">

                <EditText
                    android:id="@+id/selectcourse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Message"
                    android:ems="10"
                    android:textColor="@color/black"
                    android:textColorHint="@color/dvsink"
                    android:inputType="text"
                    android:layout_marginTop="10dp"
                    android:textSize="20sp"/>
            </com.google.android.material.textfield.TextInputLayout>


            <Button
                android:id="@+id/sign_login2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_rounded"
                android:text="Send Message"
                android:layout_marginTop="15dp"
                android:textAllCaps="false"
                android:textColor="#fffdfa"
                android:textSize="20sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Email"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:textColor="#0F9AF6"
                    android:textSize="30dp" />

                <TextView
                    android:id="@+id/callme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Contact"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:textColor="#0F9AF6"
                    android:textSize="30dp" />

            </LinearLayout>
        </LinearLayout>


    </ScrollView>




</LinearLayout>